{
  "name": "Instance Assistant for Lemmy & Kbin",
  "short_name": "Inst. Assist",
  "author": "Cynber",
  "description": "Ensure that the Lemmy/Kbin instance you are on is the one you want to be on",
  "homepage_url": "https://github.com/cynber/lemmy-instance-assistant",
  "version": "1.2.2",
  "manifest_version": 3,
  "icons": {
    "48": "img/lemming48_dev.png",
    "128": "img/lemming128_dev.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/c/*",
    "*://*/m/*",
    "*://*/post/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "img/lemming16_dev.png",
      "32": "img/lemming32_dev.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/c/*",
        "*://*/m/*",
        "*://*/post/*"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "content-sidebar.js",
        "communityNotFound.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}