{
  "name": "Instance Assistant for Lemmy & Kbin",
  "short_name": "Inst. Assist",
  "author": "Cynber",
  "description": "Simplify your Lemmy & Kbin experience with tools for your instance and communities",
  "homepage_url": "https://github.com/cynber/lemmy-instance-assistant",
  "version": "1.2.4",
  "manifest_version": 2,
  "icons": {
    "48": "img/lemming48_dev.png",
    "128": "img/lemming128_dev.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "*://*/c/*",
    "*://*/m/*",
    "*://*/post/*"
  ],
  "browser_action": {
    "default_popup": "page-popup/popup.html",
    "default_icon": {
      "16": "img/lemming16_dev.png",
      "32": "img/lemming32_dev.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/communities",
        "*://*/c/*",
        "*://*/m/*",
        "*://*/post/*"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "utils.js",
        "content-sidebar.js",
        "content-general.js",
        "content-communityNotFound.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "sidebar_action": {
    "default_title": "Instance Assistant",
    "default_icon": {
      "16": "img/lemming16_dev.png",
      "32": "img/lemming32_dev.png"
    },
    "default_panel": "page-sidebar/sidebar.html"
  },
  "options_ui": {
    "page": "page-options/options.html",
    "open_in_tab": false,
    "browser_style": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{49f79358-ada8-438f-a6b3-649ce7638a34}"
    }
  }
}