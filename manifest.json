{
  "name": "Lemmy Instance Assistant",
  "description": "Ensure that the Lemmy instance you are on is the one you want to be on",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "48": "img/lemming48.png",
    "128": "img/lemming128.png"
  },
  "permissions": [ "storage" ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "img/lemming16.png",
      "32": "img/lemming32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*", "tabs"
  ]
}