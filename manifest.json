{
  "name": "Lemmy Instance Assistant",
  "author": "Cynber",
  "description": "Ensure that the Lemmy instance you are on is the one you want to be on",
  "homepage_url": "https://github.com/cynber/lemmy-instance-assistant",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "48": "img/lemming48.png",
    "128": "img/lemming128.png"
  },
  "permissions": [ "storage", "activeTab" ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "img/lemming16.png",
      "32": "img/lemming32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false,
    "browser_style": false
  }
}